<% @user = current_user %>
<% @list = List.new %>
<h3>
<%= @user.name %>
<%= @user.email %>
</h3>

<%= form_for @list do |f| %>
  Title: <%= f.text_field :title %>
  Description: <%= f.text_field :description %>
  <%= f.hidden_field :user_id, :value => @user.id %>
  <%= f.submit "Submit" %>
<% end %>

<% @user.lists.each do |list| %>
  <p><%=list.title %></p>
  <p><%=list.description%></p>
<% end %>
